<% layout("layouts/boilerplate") -%>

<body>
  <div class="row">
    <div class="col-8 offset-2">
        <br>
        <h3>Add New Card</h3>
        <form method="POST" action="/cards" class="needs-validation" novalidate>
           <div class="mb-3">
               <label for="title" class="form-label">Title</label>
               <input type="text" placeholder="Add a catchy title" name="card[title]" class="form-control" required/> 
               <div class="invalid-feedback"> Title must be filled </div>
           </div>
          
            <div class="mb-3">
               <label for="description" class="form-label">Description</label>
               <textarea placeholder="Description" name="card[description]" class="form-control" required></textarea> 
               <div class="invalid-feedback"> Description must be filled</div>
              </div>
          
           <button class="btn btn-dark add-btn">Add</button>
           <br> <br>
           </form>
      </div>
  </div>

        
</body>
